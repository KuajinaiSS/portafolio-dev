---
const { title, date, description, link } = Astro.props;
---


<div class="absolute w-3 h-3 bg-white rounded-full mt-1.5 -start-1.5 border border-white"></div>

<time class="mb-1 text-sm font-normal leading-none text-white/60">
    {date}
</time>

<h3 class="text-lg font-semibold text-yellow-300/85 mt-2">
    {title}
</h3>

<p class="text-base font-normal text-white/80 text-pretty">
    {description}
</p>
{
    link && (
        <a href={link} class="m-2 inline-flex items-center px-4 py-2 text-sm font-medium btn btn-outline">
            Más información
            <svg
                class="w-3 h-3 ms-2 rtl:rotate-180"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 14 10"
            >
                <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M1 5h12m0 0L9 1m4 4L9 9">
                </path>
            </svg>
        </a>
    )
}


