---
import GitHubIcon from "../icons/GitHubIcon.astro";
import NextJsIcon from "../icons/NextIcon.astro";
import ReactIcon from "../icons/ReactIcon.astro";
import StripeIcon from "../icons/StripeIcon.astro";
import AstroIcon from "../icons/AstroIcon.astro";
import TypeScriptIcon from "../icons/TypeScriptIcon.astro";
import ExpressIcon from "../icons/ExpressIcon.astro";
import MySQLIcon from "../icons/MySQLIcon.astro";

import cambiarImagen from "../assets/images/vueltaAlMundo365Platos/cambiarImagen.jpg";
import historiaDeUsuario from "../assets/images/vueltaAlMundo365Platos/historiaDeUsuario.jpg";
import pagar from "../assets/images/vueltaAlMundo365Platos/pagar.jpg";
import productoADetalle from "../assets/images/vueltaAlMundo365Platos/productoADetalle.jpg";
import vaciarCarritoDCompras from "../assets/images/vueltaAlMundo365Platos/vaciarCarritoDCompras.jpg";
import Carousel from "./Carousel.astro";

const TAGS = {
  NEXTJS: { 
    label: "Next.js", 
    class: "bg-black text-white", 
    icon: NextJsIcon 
  },
  REACT: { 
    label: "React", 
    class: "bg-[#149ECA] text-white",
    icon: ReactIcon 
  },
  REACTNATIVE: { 
    label: "React Native", 
    class: "bg-[#0D7A9F] text-white",
    icon: ReactIcon 
  },
  STRIPE: { 
    label: "Stripe", 
    class: "bg-[#8B84FF] text-white",
    icon: StripeIcon 
  },
  ASTRO: { 
    label: "Astro", 
    class: "bg-[#FF6B2C] text-white",
    icon: AstroIcon 
  },
  TYPESCRIPT: { 
    label: "TypeScript", 
    class: "bg-[#2560A8] text-white",
    icon: TypeScriptIcon 
  },
  EXPRESS: { 
    label: "Express.js", 
    class: "bg-gray-700 text-white",
    icon: ExpressIcon 
  },
  MYSQL: { 
    label: "MySQL", 
    class: "bg-[#00758F] text-white",
    icon: MySQLIcon 
  },
  GITHUB: { 
    label: "GitHub", 
    class: "bg-[#24292e] text-white", 
    icon: GitHubIcon 
  }
};

const PROJECTS = [
    {
        title: "Vuelta al Mundo en 365 Platos",
        description: "E-commerce de platos internacionales desarrollado con React Native y Express.js. Implementa autenticación con Firebase, pasarela de pagos con Stripe y sistema de roles (admin/usuario). Los administradores gestionan el catálogo de productos mientras los usuarios pueden comprar, consultar su historial y actualizar su perfil. Base de datos MySQL para persistencia de datos.",
        link: "#",
        github: "#",
        images: [
            {img: cambiarImagen, id: 1},
            {img: historiaDeUsuario, id: 2},
            {img: pagar, id: 3},
            {img: productoADetalle, id: 4},
            {img: vaciarCarritoDCompras, id: 5},
        ],
        tags: [TAGS.REACTNATIVE, TAGS.EXPRESS, TAGS.STRIPE, TAGS.MYSQL, TAGS.TYPESCRIPT],
    },
]
---

{
    PROJECTS.map(({title, description, tags, images, link, github}, index) => (
        <article>
            <h3 class="text-2xl font-semibold text-yellow-300 mb-2">{title}</h3>
            <p class="text-base text-pretty mb-2">{description}</p>
            <ul class="flex flex-wrap gap-2 my-2">
                {
                    tags.map(tag => (
                        <li>
                            <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                                <tag.icon class="size-4"/> {tag.label}
                            </span>
                        </li>
                    ))
                }
            </ul>
            <Carousel images={images} id={`carousel-project-${index}`} />
        </article>
    ))
}